{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "plugins": ["import", "react", "react-hooks", "jsx-a11y"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "chai": true,
        "describe": true,
        "jest": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true,
        "before": true,
        "after": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "linebreak-style": [
        "error", "unix"
      ],
      "react/destructuring-assignment": ["error", "always", { "ignoreClassFields": true }]
    }
}

